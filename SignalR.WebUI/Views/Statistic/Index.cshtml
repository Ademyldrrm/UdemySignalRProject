		<script type="text/javascript">

			$(document).ready(() => {

				var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7109/SignalRHub").build();
				$("#connstatus").text(connection.state);
				connection.start().then(() => {
					$("#connstatus").text(connection.state);
					setInterval(() => {
						connection.invoke("SendStatistic");
						
					}, 1000);

				}).catch((err) => { console.log(err) });

				connection.on("ReceiverCategoryCount", (value) => {
					$("#categorycount").text(value);
				});
					connection.on("ReceiverProductCount", (value2) => {
						$("#productcount").text(value2);
				});
				connection.on("ReceiverActiveCategoryCount", (value3) => {
					$("#activecategorycount").text(value3);
				});
				connection.on("ReceiverPasiveCategoryCount", (value4) => {
					$("#pasivecategorycount").text(value4);
				});
				connection.on("ReceiverProductCountByCategoryNameHamburger", (value5) => {
					$("#productcountbycategorynamehamburger").text(value5);
				});
				connection.on("ReceiverProductCountByCategoryNameDrink", (value6) => {
					$("#productcountbycategorynamedrink").text(value6);
				});
				connection.on("ProductPriveAvg", (value7) => {
					$("#productpriceavg").text(value7);
				});
                connection.on("ReceiverProductNameMaxPrice", (value8) => {
                    $("#productnamebymaxprice").text(value8);
                });

                connection.on("ReceiverProductNameMinPrice", (value9) => {
                    $("#productnamebyminprice").text(value9);
                });
                connection.on("ReceiverProductAvgPriceByHamburger", (value10) => {
                    $("#productavpricebyhamburger").text(value10);
                });
                connection.on("ReceiverTotalOrderCount", (value11) => {
                    $("#totalordercount").text(value11);
                });
                connection.on("ReceiverTotalOrderActiveCount", (value12) => {
                    $("#activerrdercount").text(value12);
                });
                connection.on("ReceiverLastOrderPrice", (value13) => {
                    $("#lastorderprice").text(value13);
                });
                connection.on("ReceiverTotalMoneyCasesAmount", (value14) => {
                    $("#totalmoneycaseamount").text(value14);
                });

                connection.on("ReceiverMenuTableCount", (value15) => {
                    $("#menutablecount").text(value15);
                });


			});

